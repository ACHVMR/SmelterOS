# SmelterOS Environment Configuration
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file with real secrets

# =============================================================================
# CORE
# =============================================================================
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=debug

# =============================================================================
# GCP
# =============================================================================
GCP_PROJECT_ID=smelteros
GCP_PROJECT_NUMBER=722121007626
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GCP_SERVICE_ACCOUNT=
GOOGLE_APPLICATION_CREDENTIALS=

# =============================================================================
# FIREBASE
# =============================================================================
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# =============================================================================
# DATABASE
# =============================================================================
# Firestore
FIRESTORE_PROJECT_ID=
FIRESTORE_DATABASE_ID=(default)

# PostgreSQL (Cloud SQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=smelter_os
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_SSL=false
POSTGRES_POOL_SIZE=10
POSTGRES_CONNECT_TIMEOUT=5000

# =============================================================================
# REDIS / CACHE
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_PREFIX=smelter:
REDIS_DEFAULT_TTL=3600

# =============================================================================
# AI / ML
# =============================================================================
# OpenAI
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096

# Vertex AI (uses GCP credentials)
VERTEX_AI_PROJECT=
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# =============================================================================
# VOICE
# =============================================================================
# ElevenLabs (TTS)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# Deepgram (STT)
DEEPGRAM_API_KEY=
DEEPGRAM_MODEL=nova-2

# =============================================================================
# INTEGRATIONS
# =============================================================================
# GitHub
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PROFESSIONAL=
STRIPE_PRICE_ENTERPRISE=

# Cloudflare
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ZONE_ID=

# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_APP_TOKEN=

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_VOICE=true
FEATURE_VIBE_VALIDATION=true
FEATURE_WHITE_LABEL=true
FEATURE_ANALYTICS=true
DEBUG_MODE=true

# =============================================================================
# CIRCUIT BREAKER (MANDATORY SETTINGS)
# =============================================================================
CIRCUIT_ERROR_THRESHOLD=5
CIRCUIT_COOLDOWN_MS=30000
CIRCUIT_LATENCY_THRESHOLD_MS=50
